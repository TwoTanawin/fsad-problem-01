<h2>New York Times Headlines</h2>
<% if @nyt_headlines.present? %>
  <ul>
    <% @nyt_headlines.each do |link| %>
      <li><a href="<%= link[:url] %>"><%= link[:title] %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>No New York Times headlines found. Please provide a valid URL and search text.</p>
<% end %>

